<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>GerenciarProfessor</servlet-name>
        <servlet-class>controller.GerenciarProfessor</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GerenciarAluno</servlet-name>
        <servlet-class>controller.GerenciarAluno</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GerenciarEsporte</servlet-name>
        <servlet-class>controller.GerenciarEsporte</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GerenciarCategoria</servlet-name>
        <servlet-class>controller.GerenciarCategoria</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GerenciarProfessor</servlet-name>
        <url-pattern>/gerenciar_professor.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GerenciarAluno</servlet-name>
        <url-pattern>/gerenciar_aluno.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GerenciarEsporte</servlet-name>
        <url-pattern>/gerenciar_esporte.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GerenciarCategoria</servlet-name>
        <url-pattern>/gerenciar_categoria.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
